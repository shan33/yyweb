extend ../layout
block header
    script( src="/javascripts/culture.js" )
    link( href="/stylesheets/culture.css", rel="stylesheet" )
block content
    section#left
        div
            img( src='pic/music.jpg' no-repeat )
            |音乐
        div
            img( src='pic/dance.jpg' no-repeat )
            |舞蹈
        div
            img( src='pic/history.jpg' no-repeat )
            |历史
        div
            img( src='pic/girl.jpg' no-repeat )
            |美女
        div
            img( src='pic/boy.jpg' no-repeat )
            |帅哥
        div
            img( src='pic/mapMain.jpg' no-repeat )
            |地图
        div
            img( src='pic/eat.jpg' no-repeat )
            |吃
        div
            img( src='pic/drink.jpg' no-repeat )
            |喝
        div
            img( src='pic/house.jpg' no-repeat )
            |房
        div
            img( src='pic/marry.jpg' no-repeat )
            |嫁
        div
            img( src='pic/work.jpg' no-repeat )
            |耕作
        div
            img( src="pic/taboo.jpg" , no-repeat )
            |禁忌
        div
            img( src="pic/communicate.jpg" , no-repeat )
            |交流
        div
            img( src="pic/develop.jpg" , no-repeat )
            |发展


    section#right.well.well-lg

        #content( name="content" data-toggle="modal" , data-target="#morePics")
            img( src="pic/eat.jpg" , alt="showSomePic" , width="100%" , height="100%" )

        #morePics.modal.fade(tabIndex="-1" , role="dialog" , aria-labelledby="myWordsLabel" , aria-hidden="false")
            .modal-dialog(style="width:60%;height:50%;margin:5% auto;")
                    .modal-content
                        #pics.carousel.slide
                            ol.carousel-indicators
                                li( class="active" data-slide-to="0" data-target="#pics")
                                li( data-slide-to="1" data-target="#pics")
                                li( data-slide-to="2" data-target="#pics")
                            .carousel-inner
                            a(data-slide="prev" href="#pics" class="left carousel-control") ‹‹‹
                            a(data-slide="next" href="#pics" class="right carousel-control") ›››
        aside
            div
                a( href="#art" )
                    label.choose 更多信息
                a( href="#" )
                    label.choose 回到顶部
                audio( controls , height="50" , width="30" style="display:none;")
                    source( src="sound/木叶情歌.mp3" type="audio/mpeg" )
                a( href="/")
                    label.choose 主页
                a( href="#" onclick="drawMyImportance()")
                    label.choose 定义重点
                a( href="#" onclick='playVideo()' style="display:none;")
                    label.choose 切换视频
                

        #art.tab_div
            ul#info-tab.nav.nav-tabs
                li.active
                    a( href='#one' , data-toggle='tab' ) 详细
                li
                    a( href='#two' , data-toggle='tab' ) 其他
                li
                    a( href='#three' , data-toggle='tab' ) 交流
            .tab-content.well.well-lg
                #one.tab-pane.fade.in.active

                #two.tab-pane.fade
                    label.label.label-primary 显示有关的信息来源

                #three.tab-pane.fade
                    a.btn.btn-default( href="#mySug" , data-toggle="modal" ) 说出你的想法
                    hr
                    div

    #mySug.modal.fade( tabindex="-1" , role="dialog" , aria-labelledby="myModalLabel" , aria-hidden="true" )
        .modal-dialog
            .modal-content
                .modal-header
                    button.close( data-dismiss="modal" , aria-hidden="true" ) &times;
                    h3 您想说什么呢？
                .modal-body
                    .form-group
                        textarea#title.form-control( name="title" , placeholder="输入您的内容" )
                    .form-group
                        input.btn.btn-default( type="button" , value="提交" onclick="sug()")
